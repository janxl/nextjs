{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "[GIT LOCATION]/slugnavigation.json",

	"title": "Slug Navigation",
	"description": "Description",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
		"slug": {
			"title": "slug",
			"description": "enter slug for page such as /wine/chardonnay",
			"type": "string",
			"minLength": 0,
			"maxLength": 100
		},
		"page":{
			"title": "page",
			"description": "reference the content page (slot) to show",
			"allOf": [
				{ "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link" },
				{
					"properties": {
						"contentType": {
							"enum": [
								"[GIT LOCATION]/ArticleSlot.json"
							]
						}
					}
				}
			]
		},
		"navLabel":{  
         "allOf":[  
            {  
               "$ref":"http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
            }
         ],
         "properties":{  
            "values":{  
               "items":{  
                  "properties":{  
                     "value":{  
                        "title":"Navigation Label",
                        "type":"string",
                        "format":"text",
                        "minLength":0,
                        "maxLength":255
                     }
                  }
               }
            }
         }
      }

		
	},
	"propertyOrder": ["navLabel","slug","page"]
}